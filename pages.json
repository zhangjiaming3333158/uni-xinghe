{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom",
        "usingComponents": {
          "van-cell": "/wxcomponents/@vant/weapp/dist/cell/index",
          "van-cell-group": "/wxcomponents/@vant/weapp/dist/cell-group/index"
        }
      }
    },
    {
      "path": "pages/cate/cate",
      "style": {
        "navigationBarTitleText": "广场",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/custom/custom",
      "style": {
        "navigationBarTitleText": "定制",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom",
        "usingComponents": {
          "van-tag": "/wxcomponents/@vant/weapp/dist/tag/index",
          "van-button": "/wxcomponents/@vant/weapp/dist/button/index"
        }
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "购物车",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false,
        "navigationStyle": "custom",
        "usingComponents": {
          "van-cell": "/wxcomponents/@vant/weapp/dist/cell/index",
          "van-cell-group": "/wxcomponents/@vant/weapp/dist/cell-group/index",
          "van-button": "/wxcomponents/@vant/weapp/dist/button/index"
        }
      }
    }
  ],
  "subPackages": [
    {
      "root": "subpkgA",
      "pages": [
        {
          "path": "goods_detail/goods_detail",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "商品详情",
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "search/search",
          "style": {
            "navigationBarTitleText": "搜索",
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "login/login",
          "style": {
            "navigationBarTitleText": "登录",
            "enablePullDownRefresh": false
          }
        },{
          "path":"cate_detail/cate_detail",
          "style":{
            "navigationStyle":"custom",
            "navigationBarTitleText":"分类详情",
            "enablePullDownRefresh":false
          }
        }
      ]
    },
    {
      "root": "subpkgB",
      "pages": [
        {
          "path": "message/message",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "私人客服",
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "notice/notice",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "消息",
            "enablePullDownRefresh": false
          }
        },
        {
          "path": "judge/judge",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "评价",
            "enablePullDownRefresh": false
          }
        },
        {
          "path":"wallet/wallet",
          "style":{
            "navigationStyle": "custom",
            "navigationBarTitleText":"钱包",
            "enablePullDownRefresh":false
          }
        },{
          "path":"custom-goods/custom-goods",
          "style":{
            "navigationStyle": "custom",
            "navigationBarTitleText":"我的定制",
            "enablePullDownRefresh":false
          }
        }
      ]
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "星禾",
    "navigationBarBackgroundColor": "#823027",
    "backgroundColor": "#FFFFFF",
    "enablePullDownRefresh": true
  },
  "tabBar": {
    "selectedColor": "#C00000",
    "list": [
      {
        "pagePath": "pages/home/home",
        "text": "首页",
        "iconPath": "static/tab_icons/home.png",
        "selectedIconPath": "static/tab_icons/home-active.png"
      },
      {
        "pagePath": "pages/cate/cate",
        "text": "广场",
        "iconPath": "static/tab_icons/cate.png",
        "selectedIconPath": "static/tab_icons/cate-active.png"
      },
      {
        "pagePath": "pages/custom/custom",
        "text": "定制",
        "iconPath": "static/tab_icons/add.png",
        "selectedIconPath": "static/tab_icons/add-active.png"
      },
      {
        "pagePath": "pages/cart/cart",
        "text": "购物车",
        "iconPath": "static/tab_icons/cart.png",
        "selectedIconPath": "static/tab_icons/cart-active.png"
      },
      {
        "pagePath": "pages/my/my",
        "text": "我的",
        "iconPath": "static/tab_icons/my.png",
        "selectedIconPath": "static/tab_icons/my-active.png"
      }
    ]
  }
}
