/* 水平间距 */
.my-container {
  box-sizing: border-box;
  padding: 10px;
  background-color: #823027;
}
.my-container .user-info {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300px;
  border-radius: 30px;
  background-color: #cbc1b2;
}
.my-container .user-info .top {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50%;
  width: 100%;
}
.my-container .user-info .top .message {
  position: absolute;
  top: 10px;
  right: 10px;
  height: 35px;
  width: 35px;
}
.my-container .user-info .top .message image {
  width: 100%;
  height: 100%;
}
.my-container .user-info .top .avatar {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: #fff;
  border: 2px solid #fae084;
}
.my-container .user-info .top text {
  font-size: 24px;
  font-weight: bold;
  color: #000;
}
.my-container .user-info .bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50%;
  width: 100%;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  background-color: #c4a9a9;
}
.my-container .user-info .bottom .my3 {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  width: 100%;
  height: 30%;
  font-size: 16px;
  color: #000;
}
.my-container .user-info .bottom .my4 {
  width: 100%;
  height: 70%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.my-container .user-info .bottom .my4 .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.my-container .user-info .bottom .my4 .item image {
  margin-bottom: 10px;
  width: 30px;
  height: 30px;
}
.my-container .buy {
  box-sizing: border-box;
  padding: 10px;
  margin: 20px 0;
}
.my-container .buy .title {
  margin: 20px 0;
  padding: 5px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: bold;
  background-color: #c4a9a9;
}
.my-container .buy .goods {
  margin-top: 20px;
}

