.user-info {
  display: flex;
  align-items: center;
  height: 200rpx;
  background-color: #cbc1b2;
}
.user-info .avatar {
  margin-left: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.user-info .info {
  margin-top: -5px;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: start;
}
.user-info .info .name {
  margin-bottom: 5px;
  font-size: 40rpx;
  font-weight: bold;
}
.user-info .info .info3 .uni-tag {
  margin-right: 20rpx;
  border-color: #eeeedd;
  background-color: #eeeedd;
}
.cell {
  margin-top: 20rpx;
}
.cell .van-cell {
  margin-top: 20rpx;
  border-radius: 50rpx;
}
.cell .van-button {
  margin-top: 20rpx;
  border-radius: 50rpx;
  margin-bottom: 50rpx;
  border: 1px solid #552220;
  background-color: #552220;
}

